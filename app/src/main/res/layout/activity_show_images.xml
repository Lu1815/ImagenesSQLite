<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowImagesActivity">

    <Button
        android:id="@+id/btnShowImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/btn"
        android:text="@string/btnShow"
        android:onClick="getData"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvImgs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btnShowImg"
        app:layout_constraintRight_toRightOf="@id/btnShowImg"
        app:layout_constraintTop_toBottomOf="@id/btnShowImg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>